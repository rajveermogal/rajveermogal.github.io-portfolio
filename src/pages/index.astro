      // Speedlines parallax
      const speedlines = document.getElementById("speedlines");
      function onParallax() {
        const y = window.scrollY || 0;
        if (speedlines) speedlines.style.transform = `translateY(${y * 0.06}px)`;
      }
      window.addEventListener("scroll", onParallax, { passive: true });
      onParallax();

      // ========= HERO (REVERTED): old staged scroll (Step2 + Step3) =========
      const hero = document.getElementById("heroStage");
      const step2 = document.querySelector('[data-step="2"]');
      const step3 = document.querySelector('[data-step="3"]');
      const heroHint = document.getElementById("heroHint");

      function onHeroScroll() {
        if (!hero || !step2 || !step3) return;
        const r = hero.getBoundingClientRect();
        const total = hero.offsetHeight - window.innerHeight;
        const scrolled = clamp(-r.top, 0, total);
        const p = total > 0 ? scrolled / total : 0;

        const s2 = clamp((p - 0.20) / 0.22, 0, 1);
        step2.style.opacity = s2;
        step2.style.transform = `translateY(${(1 - s2) * 22}px) scale(${0.98 + s2 * 0.02})`;
        step2.style.filter = `blur(${(1 - s2) * 6}px)`;

        const s3 = clamp((p - 0.52) / 0.22, 0, 1);
        step3.style.opacity = s3;
        step3.style.transform = `translateY(${(1 - s3) * 22}px) scale(${0.98 + s3 * 0.02})`;
        step3.style.filter = `blur(${(1 - s3) * 6}px)`;

        if (heroHint) {
          heroHint.style.opacity = `${clamp(1 - s2 * 1.35, 0, 1)}`;
          heroHint.style.transform = `translateY(${s2 * 10}px)`;
        }
      }
      window.addEventListener("scroll", onHeroScroll, { passive: true });
      window.addEventListener("resize", onHeroScroll);
      onHeroScroll();

      // Reveal
      const revealEls = document.querySelectorAll("[data-reveal]");
      const revealIO = new IntersectionObserver(
        (entries) => entries.forEach((e) => e.isIntersecting && e.target.classList.add("in")),
        { threshold: 0.16 }
      );
      revealEls.forEach((el) => revealIO.observe(el));

      // Hover tilt
      const tiltEls = document.querySelectorAll("[data-tilt]");
      tiltEls.forEach((el) => {
        let raf = null;

        const onMove = (e) => {
          const r = el.getBoundingClientRect();
          const px = (e.clientX - r.left) / r.width;
          const py = (e.clientY - r.top) / r.height;

          const rx = (0.5 - py) * 18;
          const ry = (px - 0.5) * 22;
          const tz = 12;

          if (raf) cancelAnimationFrame(raf);
          raf = requestAnimationFrame(() => {
            el.style.transform = `perspective(900px) rotateX(${rx}deg) rotateY(${ry}deg) translateZ(${tz}px)`;
          });
        };

        const onLeave = () => { if (raf) cancelAnimationFrame(raf); el.style.transform = ""; };

        el.addEventListener("mousemove", onMove);
        el.addEventListener("mouseleave", onLeave);
      });

      // Vertical timeline “dock magnify”
      const vItems = Array.from(document.querySelectorAll("[data-vitem]"));
      vItems.forEach((item) => {
        item.addEventListener("mouseenter", () => {
          item.classList.add("hot");
          item.style.zIndex = "6";
        });
        item.addEventListener("mouseleave", () => {
          item.classList.remove("hot");
          item.style.zIndex = "";
        });
      });
    </script>

